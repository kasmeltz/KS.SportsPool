@using KS.SportsPool.MVC.Models;
@using KS.SportsPool.Data.POCO;
@model PoolListViewModel
    
@{
    <div class="table">
        <div class="tr">
            <span class="td">&nbsp;</span>
            <span class="td">Name</span>
            <span class="td">Telephone</span>
            <span class="td">Email</span>
            <span class="td">Score</span>
        </div>
        @foreach (PoolEntry entry in Model.Entries)
        {
            Html.RenderPartial("PoolGrid", new PoolViewModel { Athletes = Model.Athletes, Teams = Model.Teams, Entry = entry });
        }
    </div>
}     
